{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2017",
	  "lib": ["es2017"],
	  "outDir": "out",
	  "rootDir": "src",
	  "sourceMap": true,
	  "types": ["mocha", "node"],
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "typeRoots": ["node_modules/@types", "src/types"],
	  "baseUrl": "./src"
	},
	"exclude": ["node_modules", ".vscode-test"],
	"include": ["src", "src/test"]
  }

{
  "name": "beom-header",
  "displayName": "Beom Header",
  "description": "Insert standardized file headers for various file types",
  "version": "3.2.6",
  "publisher": "seongbeom",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=18.17.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/beom-git/BeomHeader.git"
  },
  "bugs": {
    "url": "https://github.com/beom-git/BeomHeader/issues"
  },
  "homepage": "https://github.com/beom-git/BeomHeader#readme",
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Beom Header: Project & Organization",
        "properties": {
          "beomHeader.projectName": {
            "type": "string",
            "description": "Name of your project",
            "default": "MyProject"
          },
          "beomHeader.projectDescription": {
            "type": "string",
            "description": "Project description template (use ${projectName} for substitution)",
            "default": "This module provides core functionality for the ${projectName} application"
          },
          "beomHeader.companyName": {
            "type": "string",
            "description": "Your company or organization name",
            "default": "YourCompany"
          },
          "beomHeader.teamName": {
            "type": "string",
            "description": "Team or department name (optional)",
            "default": ""
          }
        }
      },
      {
        "title": "Beom Header: Author Information",
        "properties": {
          "beomHeader.authorFullName": {
            "type": "string",
            "description": "Author's full name (if different from system username)",
            "default": ""
          },
          "beomHeader.authorEmail": {
            "type": "string",
            "description": "Author's email address",
            "default": "username@example.com"
          },
          "beomHeader.authorTitle": {
            "type": "string",
            "description": "Author's job title or role (e.g., Senior Developer)",
            "default": ""
          }
        }
      },
      {
        "title": "Beom Header: Copyright & License",
        "properties": {
          "beomHeader.copyrightStartYears": {
            "type": "string",
            "description": "Copyright start year for your project",
            "default": "2023"
          },
          "beomHeader.copyrightNotice": {
            "type": "string",
            "description": "Copyright notice format (use ${startYear}, ${endYear}, ${companyName})",
            "default": "(C) Copyright ${startYear}-${endYear} ${companyName}"
          },
          "beomHeader.licenseType": {
            "type": "string",
            "description": "License type for your project",
            "enum": [
              "All Rights Reserved",
              "MIT",
              "Apache-2.0",
              "GPL-3.0",
              "GPL-2.0",
              "LGPL-3.0",
              "LGPL-2.1",
              "BSD-3-Clause",
              "BSD-2-Clause",
              "ISC",
              "MPL-2.0",
              "Unlicense",
              "Custom"
            ],
            "default": "All Rights Reserved"
          },
          "beomHeader.customLicenseText": {
            "type": "string",
            "description": "Custom license text (only used when License Type is 'Custom')",
            "default": ""
          },
          "beomHeader.licenseUrl": {
            "type": "string",
            "description": "URL to the full license text (optional)",
            "default": ""
          },
          "beomHeader.includeLicenseHeader": {
            "type": "boolean",
            "description": "Include license information in file headers",
            "default": true
          }
        }
      },
      {
        "title": "Beom Header: Header Style & Formatting",
        "properties": {
          "beomHeader.headerStyle": {
            "type": "string",
            "description": "Header template style",
            "enum": [
              "standard",
              "minimal",
              "detailed",
              "custom"
            ],
            "default": "standard"
          },
          "beomHeader.separatorLength": {
            "type": "number",
            "description": "Length of header separator lines",
            "default": 70,
            "minimum": 10,
            "maximum": 200
          },
          "beomHeader.separatorChar": {
            "type": "string",
            "description": "Character used for header separator lines",
            "enum": [
              "-",
              "=",
              "*",
              "#",
              "~",
              "+",
              "_"
            ],
            "default": "-"
          },
          "beomHeader.includeEmptyLines": {
            "type": "boolean",
            "description": "Add empty comment lines for better header readability",
            "default": true
          }
        }
      },
      {
        "title": "Beom Header: Version Management",
        "properties": {
          "beomHeader.versionFormat": {
            "type": "string",
            "description": "Version number format style",
            "enum": [
              "v{major:02d}p{patch:02d}",
              "v{major}.{minor}.{patch}",
              "{major}.{minor}.{patch}",
              "v{major}.{patch}",
              "{major}.{patch}",
              "custom"
            ],
            "default": "v{major:02d}p{patch:02d}"
          },
          "beomHeader.customVersionFormat": {
            "type": "string",
            "description": "Custom version format (only used when Version Format is 'custom')",
            "default": "v{major:02d}p{patch:02d}"
          },
          "beomHeader.autoIncrementVersion": {
            "type": "boolean",
            "description": "Automatically increment version numbers when adding entries",
            "default": true
          },
          "beomHeader.includeMinorVersion": {
            "type": "boolean",
            "description": "Include minor version number in version format",
            "default": false
          }
        }
      },
      {
        "title": "Beom Header: File Path & Display",
        "properties": {
          "beomHeader.showFullPath": {
            "type": "boolean",
            "description": "Show full file path instead of just filename",
            "default": false
          },
          "beomHeader.showRelativePath": {
            "type": "boolean",
            "description": "Show relative path from workspace root",
            "default": false
          },
          "beomHeader.pathSeparator": {
            "type": "string",
            "description": "Path separator character for file paths",
            "default": "/"
          }
        }
      },
      {
        "title": "Beom Header: Date & Time Settings",
        "properties": {
          "beomHeader.timeZone": {
            "type": "string",
            "description": "Time zone for timestamp generation (e.g., 'UTC', 'Asia/Seoul', 'America/New_York')",
            "default": "UTC",
            "enum": [
              "UTC",
              "Asia/Seoul",
              "Asia/Tokyo",
              "Asia/Shanghai",
              "Asia/Bangkok",
              "Asia/Singapore",
              "Asia/Hong_Kong",
              "Asia/Kolkata",
              "Asia/Dubai",
              "Europe/London",
              "Europe/Paris",
              "Europe/Berlin",
              "Europe/Moscow",
              "America/New_York",
              "America/Chicago",
              "America/Denver",
              "America/Los_Angeles",
              "America/Toronto",
              "America/Mexico_City",
              "America/Sao_Paulo",
              "Australia/Sydney",
              "Australia/Melbourne",
              "Pacific/Auckland"
            ]
          },
          "beomHeader.timeZoneFormat": {
            "type": "string",
            "description": "How to display timezone in 'Last Updated' field",
            "enum": [
              "abbreviation",
              "full",
              "offset"
            ],
            "enumDescriptions": [
              "Show as abbreviation (KST, EST, JST, etc.)",
              "Show as full name (Asia/Seoul, America/New_York, etc.)",
              "Show as UTC offset (UTC+9, UTC-5, etc.)"
            ],
            "default": "abbreviation"
          }
        }
      },
      {
        "title": "Beom Header: Auto-Update Behavior",
        "properties": {
          "beomHeader.autoUpdateLastModified": {
            "type": "boolean",
            "description": "Auto-update 'Last Modified' timestamp when saving files",
            "default": true
          },
          "beomHeader.autoUpdateEditor": {
            "type": "boolean",
            "description": "Auto-update editor information when saving files",
            "default": true
          },
          "beomHeader.enableConfigChangeNotifications": {
            "type": "boolean",
            "description": "Show notifications when configuration changes and suggest header updates",
            "default": false
          }
        }
      },
      {
        "title": "Beom Header: File Processing",
        "properties": {
          "beomHeader.excludePatterns": {
            "type": "array",
            "description": "File patterns to exclude from bulk header updates",
            "items": {
              "type": "string"
            },
            "default": [
              "**/node_modules/**",
              "**/out/**",
              "**/build/**",
              "**/dist/**",
              "**/.git/**",
              "**/.vscode/**",
              "**/.*"
            ]
          }
        }
      },
      {
        "title": "Beom Header: Language Support",
        "properties": {
          "beomHeader.commentTokenMap": {
            "type": "object",
            "description": "Comment tokens for different programming languages",
            "default": {
              "python": "#",
              "shellscript": "#",
              "ruby": "#",
              "perl": "#",
              "lua": "--",
              "javascript": "//",
              "typescript": "//",
              "java": "//",
              "c": "//",
              "cpp": "//",
              "verilog": "//",
              "systemverilog": "//",
              "tcl": "#",
              "upf": "#",
              "rust": "//",
              "go": "//",
              "kotlin": "//",
              "swift": "//",
              "php": "//",
              "sql": "--",
              "yaml": "#",
              "dockerfile": "#",
              "makefile": "#",
              "cmake": "#",
              "html": "<!--",
              "xml": "<!--",
              "css": "/*",
              "scss": "//",
              "sass": "//",
              "less": "//",
              "r": "#",
              "matlab": "%",
              "powershell": "#",
              "batch": "REM",
              "vim": "\"",
              "haskell": "--",
              "elixir": "#",
              "erlang": "%",
              "dart": "//",
              "scala": "//",
              "clojure": ";;",
              "fsharp": "//",
              "csharp": "//",
              "visualbasic": "'",
              "pascal": "//",
              "fortran": "!",
              "cobol": "*",
              "assembly": ";"
            }
          },
          "beomHeader.shebangPerLanguage": {
            "type": "object",
            "description": "Shebang lines for script languages",
            "default": {
              "python": "/usr/bin/env python3",
              "bash": "/bin/bash"
            }
          },
          "beomHeader.languageExtensions": {
            "type": "object",
            "description": "Custom language ID to file extensions mapping (overrides defaults)",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "default": {
              "typescript": [
                ".ts",
                ".tsx"
              ],
              "javascript": [
                ".js",
                ".jsx",
                ".mjs",
                ".cjs"
              ],
              "typescriptreact": [
                ".tsx"
              ],
              "javascriptreact": [
                ".jsx"
              ],
              "python": [
                ".py",
                ".pyw",
                ".pyi"
              ],
              "java": [
                ".java"
              ],
              "c": [
                ".c",
                ".h"
              ],
              "cpp": [
                ".cpp",
                ".cc",
                ".cxx",
                ".c++",
                ".hpp",
                ".hh",
                ".hxx",
                ".h++"
              ],
              "csharp": [
                ".cs"
              ],
              "go": [
                ".go"
              ],
              "rust": [
                ".rs"
              ],
              "swift": [
                ".swift"
              ],
              "kotlin": [
                ".kt",
                ".kts"
              ],
              "scala": [
                ".scala",
                ".sc"
              ],
              "ruby": [
                ".rb",

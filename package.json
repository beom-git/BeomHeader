        }
      }
    ],
    "commands": [
      {
        "command": "fileHeader.insert",
        "title": "Beom Header: Create New Header"
      },
      {
        "command": "fileHeader.insertVersion",
        "title": "Beom Header: Add Version History Entry"
      },
      {
        "command": "fileHeader.insertTodo",
        "title": "Beom Header: Add TODO Item"
      },
      {
        "command": "fileHeader.addLanguageMapping",
        "title": "Beom Header: Add Comment Token for Language"
      },
      {
        "command": "fileHeader.removeLanguageMapping",
        "title": "Beom Header: Remove Comment Token for Language"
      },
      {
        "command": "fileHeader.listLanguageMappings",
        "title": "Beom Header: View All Comment Token Mappings"
      },
      {
        "command": "fileHeader.addLanguageExtensionMapping",
        "title": "Beom Header: Add File Extension Mapping"
      },
      {
        "command": "fileHeader.removeLanguageExtensionMapping",
        "title": "Beom Header: Remove File Extension Mapping"
      },
      {
        "command": "fileHeader.listLanguageExtensionMappings",
        "title": "Beom Header: View All Extension Mappings"
      },
      {
        "command": "fileHeader.configureFilePath",
        "title": "Beom Header: Set File Path Display Options"
      },
      {
        "command": "fileHeader.configurePathSeparator",
        "title": "Beom Header: Set Path Separator Character"
      },
      {
        "command": "fileHeader.configureLicense",
        "title": "Beom Header: Set License Type"
      },
      {
        "command": "fileHeader.configureLicenseUrl",
        "title": "Beom Header: Set License URL"
      },
      {
        "command": "fileHeader.configureCopyrightNotice",
        "title": "Beom Header: Set Copyright Notice Format"
      },
      {
        "command": "fileHeader.toggleLicenseHeader",
        "title": "Beom Header: Enable/Disable License in Headers"
      },
      {
        "command": "fileHeader.configureVersionFormat",
        "title": "Beom Header: Set Version Number Format"
      },
      {
        "command": "fileHeader.configureAuthorInfo",
        "title": "Beom Header: Set Author Information"
      },
      {
        "command": "fileHeader.configureHeaderStyle",
        "title": "Beom Header: Set Header Template Style"
      },
      {
        "command": "fileHeader.toggleAutoIncrementVersion",
        "title": "Beom Header: Enable/Disable Auto Version Increment"
      },
      {
        "command": "fileHeader.selectHeaderStyle",
        "title": "Beom Header: Choose Header Template Style"
      },
      {
        "command": "fileHeader.configureProjectDescription",
        "title": "Beom Header: Set Project Description Template"
      },
      {
        "command": "fileHeader.toggleAutoUpdateLastModified",
        "title": "Beom Header: Enable/Disable Auto Timestamp Update"
      },
      {
        "command": "fileHeader.toggleAutoUpdateEditor",
        "title": "Beom Header: Enable/Disable Auto Editor Info Update"
      },
      {
        "command": "fileHeader.cleanupDuplicateLastEntries",
        "title": "Beom Header: Remove Duplicate History Entries"
      },
      {
        "command": "fileHeader.updateCurrentHeader",
        "title": "Beom Header: Refresh Current File Header"
      },
      {
        "command": "fileHeader.updateAllHeaders",
        "title": "Beom Header: Refresh All Workspace Headers"
      },
      {
        "command": "fileHeader.configureProjectName",
        "title": "Beom Header: Set Project Name"
      }
    ],
    "keybindings": [
      {
        "command": "fileHeader.insert",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-assets",
    "copy-assets": "mkdir -p out/src/assets/templates && cp src/assets/templates/*.json out/src/assets/templates/",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "npm run compile && node ./out/test/runTest.js",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.0.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "chai": "^6.0.1",
    "glob": "^10.3.0",
    "mocha": "^10.2.0",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  }
}

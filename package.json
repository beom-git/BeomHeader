                ".xml",
                ".xsd",
                ".xsl",
                ".xslt"
              ],
              "css": [
                ".css"
              ],
              "scss": [
                ".scss"
              ],
              "sass": [
                ".sass"
              ],
              "less": [
                ".less"
              ],
              "stylus": [
                ".styl"
